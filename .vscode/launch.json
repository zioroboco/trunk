{
  "configurations": [
    {
      "name": "run (js)",
      "request": "launch",
      "program": "${workspaceFolder}/examples/.trunkrc.mjs",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "run (ts)",
      "request": "launch",
      "program": "${workspaceFolder}/examples/.trunkrc.ts",
      "runtimeArgs": ["--no-warnings", "--loader=ts-node/esm"],
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "jest (all)",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "runtimeArgs": ["--experimental-vm-modules", "--no-warnings"],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/*jest*/**"],
      "type": "pwa-node"
    },
    {
      "name": "jest (file)",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "${fileBasenameNoExtension}"],
      "runtimeArgs": ["--experimental-vm-modules", "--no-warnings"],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/*jest*/**"],
      "type": "pwa-node"
    }
  ]
}
