{
  "private": true,
  "workspaces": [
    "package"
  ],
  "scripts": {
    "docs": "wikidir",
    "postinstall": "wikidir update",
    "ts-node": "node --no-warnings --loader ts-node/esm",
    "test": "node --no-warnings --experimental-vm-modules node_modules/.bin/jest",
    "build": "tsc --build"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(spec|test)\\.mjs$",
    "moduleFileExtensions": [
      "js",
      "mjs"
    ]
  },
  "wallaby": {
    "autoDetect": true,
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  },
  "type": "module",
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "jest": "^27.2.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "wikidir": "^0.1.3"
  }
}
